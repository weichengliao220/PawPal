<%= simple_form_for @petsitter do |f| %>

  <% f.input :user_id, as: :hidden, input_html: { value: @user }%>

  <%= f.input :price %>
  <%= f.input :bio %>
  <%= f.input :picture_url %>
  <%= f.input :acceptable_pets, collection: ['dog', 'cat', 'bird'], prompt: 'Select a pet' %>

  <%= f.submit "Add Petsitter", class: "btn btn-primary" %>

<% end %>
