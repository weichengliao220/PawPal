<%= simple_form_for @booking do |f| %>

  <%= f.input :user_id, as: :hidden, input_html: { value: @user.id } %>
  <%= f.input :petsitter_id, as: :hidden, input_html: { value: @petsitter.id } %>

  <%= f.input :start_date %>
  <%= f.input :end_date %>
  <%= f.input :location, as: :boolean, label: 'Do you want the petsitter to keep your pet at his home ?' %>

  <%= f.submit "Add Booking", class: "btn btn-primary" %>

<% end %>
